{% extends 'base.html.twig' %}

{% block title %}Mettre à jour l'article{% endblock %}

{% block main_content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Mettre à jour l'article</h1>
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card mb-4">
            <div class="card-body">
                {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.titre) }}
                        {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.titre) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.texte) }}
                        {{ form_widget(form.texte, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.texte) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(form.image) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.image) }}
                        {% if article.imagePath %}
                            <img src="{{ asset(article.imagePath) }}" alt="Image de l'article" class="img-thumbnail mt-2" width="200">
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                    <a href="{{ path('app_article') }}" class="btn btn-secondary">Annuler</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}